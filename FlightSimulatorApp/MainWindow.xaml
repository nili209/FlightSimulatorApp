<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:View="clr-namespace:FlightSimulatorApp.View"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <View:Joystick x:Name="joystick" Margin="0,10,-0.4,-10"></View:Joystick>
        <Slider x:Name="throttle" HorizontalAlignment="Left" Margin="581,292,0,0" VerticalAlignment="Top" Width="137" Height="25" ValueChanged="throttle_ValueChanged" Value="{Binding VM_Throttle}"/>
        <Slider x:Name="aileron" HorizontalAlignment="Left" Margin="581,255,0,0" VerticalAlignment="Top" Width="137" Value="{Binding VM_Aileron}"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="725,292,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Width="55"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="723,255,0,0" TextWrapping="Wrap" Text="Aileron" VerticalAlignment="Top" Width="61"/>
    </Grid>
</Window>
