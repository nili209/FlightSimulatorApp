<UserControl x:Class="FlightSimulatorApp.View.Wheel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:Joystick x:Name="joystick" Margin="0,10,-0.4,-10"></local:Joystick>
        <Slider x:Name="throttle" HorizontalAlignment="Left" Margin="583,292,0,0" VerticalAlignment="Top" Width="137" Height="25" Value="{Binding VM_Throttle, Mode=OneWay}" Minimum="-1" Maximum="1"/>
        <Slider x:Name="aileron" HorizontalAlignment="Left" Margin="581,184,0,0" VerticalAlignment="Top" Width="137" Value="{Binding VM_Aileron, Mode=OneWay}" Minimum="-1" Maximum="1"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="725,292,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Width="55"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="725,184,0,0" TextWrapping="Wrap" Text="Aileron" VerticalAlignment="Top" Width="61"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="20,184,0,0" TextWrapping="Wrap" Text="Aileron" VerticalAlignment="Top" Width="55"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="20,237,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Width="55"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="20,134,0,0" TextWrapping="Wrap" Text="Elevator" VerticalAlignment="Top" Width="55" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="20,76,0,0" TextWrapping="Wrap" Text="Rudder" VerticalAlignment="Top" Width="55"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,76,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="126"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,134,0,0" TextWrapping="Wrap" Text="{Binding ElementName=joystick, Path=PositionY}" VerticalAlignment="Top" Width="126"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="86,184,0,0" TextWrapping="Wrap" Text="{Binding ElementName=aileron, Path=Value}" VerticalAlignment="Top" Width="126"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="85,237,0,0" TextWrapping="Wrap" Text="{Binding ElementName=throttle, Path=Value}" VerticalAlignment="Top" Width="127"/>
    </Grid>
</UserControl>
