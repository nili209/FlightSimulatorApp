<UserControl x:Class="FlightSimulatorApp.View.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="780"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="496,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="496,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="453,72,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="PORT" HorizontalAlignment="Left" Margin="441,126,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="ConnectSetting" Content="Connect" HorizontalAlignment="Left" Margin="496,196,0,0" VerticalAlignment="Top" Width="168" Height="27" FontSize="14" Click="ConnectSetting_Click"/>
    </Grid>
</UserControl>
